{
  "name": "tauri-template",
  "version": "1.0.0",
  "description": "A Tauri 2 + React + TypeScript template with comprehensive tooling",
  "type": "module",
  "main": "create.js",
  "bin": {
    "create-tauri-template": "./create.js"
  },
  "files": [
    "create.js",
    "template/**/*"
  ],
  "scripts": {
    "create": "node create.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "commit": "git-cz",
    "mcp:dev": "cd mcp-server && pnpm dev",
    "mcp:build": "cd mcp-server && pnpm build",
    "mcp:start": "cd mcp-server && pnpm start",
    "mcp:install": "cd mcp-server && pnpm install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./cz-config.js"
    }
  },
  "keywords": [
    "tauri",
    "react",
    "typescript",
    "template",
    "starter",
    "vite",
    "tailwindcss",
    "mcp",
    "model-context-protocol",
    "ai-assistant"
  ],
  "author": "anypond",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anypond/tauri-template.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "chalk": "^5.6.1",
    "commander": "^12.1.0",
    "commitizen": "^4.3.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fs-extra": "^11.3.1",
    "husky": "^9.1.7",
    "inquirer": "^9.3.7",
    "lint-staged": "^16.1.6",
    "ora": "^8.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "validate-npm-package-name": "^5.0.1",
    "word-wrap": "^1.2.5"
  }
}
